#!/usr/bin/env bash
set -euo pipefail

AUTHOR="Alex Clairr"
COPY="© $(date +%Y) Alex Clairr"
HOOK_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
WATERMARK_SCRIPT="$HOOK_DIR/watermark.py"

# Detect Python executable (prefer virtual environment)
if [ -n "${VIRTUAL_ENV:-}" ]; then
  PYTHON="$VIRTUAL_ENV/bin/python"
elif [ -f "venv/bin/python" ]; then
  PYTHON="./venv/bin/python"
elif [ -f ".venv/bin/python" ]; then
  PYTHON="./.venv/bin/python"
else
  PYTHON="python3"
fi

echo "[pre-commit] Using Python: $PYTHON"

echo "[pre-commit] Starting comprehensive image processing..."

# ===== PART 1: Process new/modified images =====
echo "[pre-commit] Step 1: Processing new/modified images..."

# List of STAGED WebP files for this commit (additions/modifications), terminated by NUL
staged_images=$(git diff --cached --name-only -z --diff-filter=ACM | tr '\0' '\n' | grep -Ei '\.webp$' || true)

if [ -n "$staged_images" ]; then
  echo "[pre-commit] Found new/modified images:"
  echo "$staged_images" | sed 's/^/  - /'
  echo

  # Process each staged WebP image
  git diff --cached --name-only -z --diff-filter=ACM \
  | while IFS= read -r -d '' f; do
    case "$f" in
      *.webp|*.WEBP)
        echo "[pre-commit] Processing new WebP image: $f"
        
        # 1) Apply invisible watermark
        if "$PYTHON" "$WATERMARK_SCRIPT" apply "$f"; then
          echo "[pre-commit] ✓ Watermark applied: $f"
        else
          echo "[pre-commit] ✗ Failed to apply watermark: $f"
          exit 1
        fi
        
        # 2) Clean EXIF and add copyright
        exiftool -overwrite_original \
          -all= \
          -Artist="$AUTHOR" \
          -XMP-dc:Creator="$AUTHOR" \
          -Copyright="$COPY" \
          "$f" >/dev/null
        
        # 3) Re-stage the processed file
        git add -- "$f"
        echo "[pre-commit] ✓ EXIF processed and re-staged: $f"
      ;;
    esac
  done
else
  echo "[pre-commit] No new/modified WebP images in this commit."
fi

# ===== PART 2: Validate STAGED images only =====
echo
echo "[pre-commit] Step 2: Validating staged images in this commit..."

# Get staged WebP files for this commit (including processed ones from Part 1)
staged_images=$(git diff --cached --name-only | grep -Ei '\.webp$' || true)

if [ -z "$staged_images" ]; then
  echo "[pre-commit] No staged WebP images to validate."
else
  echo "[pre-commit] Checking $(echo "$staged_images" | wc -l) staged WebP images for watermarks and EXIF compliance..."

  # Check watermarks on staged WebP images only
  echo "[pre-commit] Verifying watermarks on staged WebP images..."
  if ! "$PYTHON" "$WATERMARK_SCRIPT" verify $staged_images; then
    echo "[pre-commit] ✗ Some staged images are missing watermarks!"
    exit 1
  fi

  # Check EXIF on staged WebP images only (skip files in skip list)
  echo "[pre-commit] Verifying EXIF compliance on staged WebP images..."
  bad_exif=0
  for f in $staged_images; do
    # Skip files that are in the skip list
    if [ "$f" = "assets/pics/lelem.webp" ]; then
      echo "[pre-commit] ⏭ Skipping EXIF check for: $f"
      continue
    fi
    
    # Check for potentially sensitive metadata (GPS, camera settings, etc.)
    # Allow basic file info, dimensions, format info, and copyright fields
    sensitive=$(exiftool -s -S -all:all "$f" | grep -iE '^(GPS|Camera|Make|Model|SerialNumber|LensInfo|ExposureTime|ISO|FocalLength|Flash|WhiteBalance|MeteringMode|ExposureMode|SceneCaptureType|Orientation|Software|ModifyDate|CreateDate|DateTimeOriginal|UserComment|ImageDescription|XPComment|XPAuthor|XPKeywords|XPSubject|ProcessingSoftware|HostComputer|ThumbnailImage):' || true)
    if [ -n "$sensitive" ]; then
      echo "[pre-commit] ✗ $f contains sensitive metadata:"
      echo "$sensitive" | sed 's/^/    /'
      bad_exif=1
    fi
  done

  if [ $bad_exif -eq 1 ]; then
    echo "[pre-commit] ✗ Some staged WebP images have unauthorized EXIF data!"
    exit 1
  fi
fi

echo "[pre-commit] ✓ All WebP images passed validation!"
echo "[pre-commit] WebP image processing complete."

# ===== PART 3: Check for unauthorized image formats =====
echo
echo "[pre-commit] Step 3: Checking for unauthorized image formats in assets..."

# Check for any image files in assets that are not .webp or .ico
unauthorized_images=$(find assets -type f \( -iname "*.jpg" -o -iname "*.jpeg" -o -iname "*.png" -o -iname "*.gif" -o -iname "*.bmp" -o -iname "*.tiff" -o -iname "*.svg" \) 2>/dev/null || true)

if [ -n "$unauthorized_images" ]; then
  echo "[pre-commit] ✗ Found unauthorized image formats in assets directory:"
  echo "$unauthorized_images" | sed 's/^/  - /'
  echo
  echo "Only .webp and .ico files are allowed in the assets directory."
  echo "Please convert these images to WebP format using:"
  echo "  python scripts/convert_to_webp.py --overwrite"
  echo "Then remove the original files."
  exit 1
else
  echo "[pre-commit] ✓ No unauthorized image formats found in assets directory."
fi

# ===== PART 4: Increment VERSION file =====
echo
echo "[pre-commit] Step 4: Incrementing version..."

# Check if VERSION file exists
if [ -f "VERSION" ]; then
  current_version=$(cat VERSION)
  echo "[pre-commit] Current version: $current_version"
  
  # Parse version (assuming format: major.minor.patch)
  IFS='.' read -r major minor patch <<< "$current_version"
  
  # Increment patch version
  new_patch=$((patch + 1))
  new_version="$major.$minor.$new_patch"
  
  # Update VERSION file
  echo "$new_version" > VERSION
  
  # Stage the updated VERSION file
  git add VERSION
  
  echo "[pre-commit] ✓ Version incremented to: $new_version"
else
  echo "[pre-commit] ✗ VERSION file not found!"
  exit 1
fi
